{
    "compilerOptions": {
        "module": "esnext",
        "target": "es2017",
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "outDir": "dist"
    },
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Recommended",
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}